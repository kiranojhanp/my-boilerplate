{
  "name": "simple-todo-api",
  "version": "1.0.0",
  "description": "Simple Todo API built with Bun, TypeScript, and tRPC",
  "main": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "test": "bun test",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "@trpc/client": "^11.4.2",
    "@trpc/server": "^11.4.2",
    "superjson": "^2.2.2",
    "trpc-bun-adapter": "^1.3.0",
    "winston": "^3.11.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}