{
  "name": "simple-todo-api",
  "version": "1.0.0",
  "description": "Simple Todo API built with Bun, TypeScript, and tRPC",
  "main": "src/backend/main.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --watch src/backend/main.ts",
    "dev:web": "vite",
    "dev:full": "concurrently \"bun run dev\" \"bun run dev:web\"",
    "start": "bun run src/backend/main.ts",
    "build": "bun build src/backend/main.ts --outdir ./dist --target bun",
    "build:web": "vite build",
    "build:web:analyze": "ANALYZE=true vite build",
    "build:web:preview": "vite preview",
    "build:all": "bun run build:web && bun run build",
    "test": "bun test",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "create-feature": "bun run scripts/create-feature.ts"
  },
  "dependencies": {
    "@paralleldrive/cuid2": "^2.2.2",
    "@tanstack/react-query": "^5.81.5",
    "@trpc/client": "^11.4.2",
    "@trpc/react-query": "^11.4.3",
    "@trpc/server": "^11.4.2",
    "@types/react-router-dom": "^5.3.3",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.2",
    "drizzle-zod": "0.5.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.3",
    "superjson": "^2.2.2",
    "trpc-bun-adapter": "^1.3.0",
    "winston": "^3.11.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-react": "^4.6.0",
    "concurrently": "^9.2.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "rollup-plugin-visualizer": "^6.0.3",
    "terser": "^5.43.1",
    "vite": "^7.0.0",
    "vite-plugin-chunk-split": "^0.5.0",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}